<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow">
        <TextView
            android:id="@+id/stateName"
            android:text="Name of the State"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#141823"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/confirmedin"
            android:text="Total Confirmed cases\n(Indian National)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_weight="0.2"
            />
        <TextView
            android:id="@+id/confirmedf"
            android:text="Total Confirmed cases\n(Foreign National )"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_weight="0.2"
            />
        <TextView
            android:id="@+id/cured"
            android:text="Cured/Discharged/Migrated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/death"
            android:text="Deaths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </TableRow>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_below="@+id/tableRow"
      />

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:visibility="gone"/>




</RelativeLayout>